@model WebConDocs.Clases.clsPagina

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Pagina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guardar" asp-controller="Pagina">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="iidpagina" />
            <div class="form-group">
                <label asp-for="mensaje" class="control-label"></label>
                <input asp-for="mensaje" class="form-control" />
                <span asp-validation-for="mensaje" class="text-danger"></span>
                @if (Model != null && (!string.IsNullOrEmpty(Model.MensajeError)))
                {
                    <p class="text-danger">@Model.MensajeError</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="accion" class="control-label"></label>
                <input asp-for="accion" class="form-control" />
                <span asp-validation-for="accion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="controller" class="control-label"></label>
                <input asp-for="controller" class="form-control" />
                <span asp-validation-for="controller" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
                <a  class="btn btn-danger" asp-action="Index" asp-controller="Pagina">Regresar</a>
            </div>
        </form>
    </div>
</div>

